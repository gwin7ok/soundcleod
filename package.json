{
  "private": true,
  "scripts": {
    "predist": "npm run generate-images",
    "dist": "build",
    "prepack": "npm run generate-images",
    "pack": "build --dir",
    "prerelease": "npm run generate-images",
    "release": "build",
    "eslint": "eslint .",
    "postinstall": "install-app-deps",
    "start": "electron ./app --profile=development --no-auto-updater --developer-tools",
    "test": "mocha",
    "generate-images": "gulp images"
  },
  "build": {
    "appId": "com.electron.soundcleod",
    "extraResources": [
      "dsa_pub.pem",
      "Credits.rtf"
    ],
    "dmg": {
      "iconSize": 128,
      "contents": [
        {
          "x": 345,
          "y": 153,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 95,
          "y": 153,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": [
        "squirrel"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "squirrelWindows": {
      "iconUrl": "https://soundcleod.com/favicon.ico"
    }
  },
  "devDependencies": {
    "electron": "^4.1.0",
    "electron-builder": "20.38.5",
    "electron-builder-squirrel-windows": "^20.38.5",
    "eslint": "^5.12.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "gulp": "^4.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-to-ico": "^1.0.0",
    "mocha": "^5.0.1",
    "spectron": "^5.0.0",
    "svg2png": "^4.1.1",
    "through2": "^2.0.5",
    "tmp": "0.0.33",
    "vinyl": "^2.1.0"
  }
}
